#statistic-title
	width auto
	height 30px
	line-height 30px
	margin 5px 10px
	font-size 20px
	font-weight 700

#statistic
	border-radius 2px
	background #fefefe
	opacity 0.8
	margin 10px
	padding 2%
	width 90%
	box-shadow 0px 0px 5px 0px rgba(50, 50, 50, 0.5)
	position relative

	.statistic-info
		width 100%
		height 30px
		background white
		font-size 15px
		font-weight 700
		line-height 30px 
		padding 0 5px
		cursor pointer
		border-radius 2px
		box-sizing border-box

		&:hover
			background-color #3ac
