#sitetour
	position absolute
	overflow hidden
	z-index 100

	#sitetour-shadow
		width 100%
		height 100%
		background rgba(0, 0, 0, 0.5)

		#sitetour-arrow
			position absolute
			width 100px
			height 100px
			display none
			cursor pointer

		#sitetour-info
			position absolute
			width auto
			height auto
			background #fff
			border hidden
			border-radius 2px
			color #333
			font-size 15px
			padding 10px
			box-sizing border-box
			text-align center
			display none
			cursor pointer
			box-shadow 0 0 10px rgba(48,200,248,0.5)

		#sitetour-bar
			width 100%
			height auto
			position absolute
			left 0
			bottom 0

			#sitetour-next-button, #sitetour-cancel-button
				width 100px
				height 30px
				background #4be
				margin 50px
				line-height 30px
				text-align center
				border hidden
				border-radius 2px
				float right
				color white
				cursor pointer
				font-size 16px

				&:hover
					background #4aa
					color white

			#sitetour-cancel-button
				float left

h3.tour
	width 100%
	height 30px
	background #4be
	color white
	margin 0
	padding-top 5px