#menu-wrap
	position absolute
	width 15%
	top 100px
	bottom 30px
	border-right 1px solid #dfdfdf
	background #fefefe
	z-index 1
	&::-webkit-scrollbar
		display none
	#menu
		width 100%

	#menu li
		height 38px
		border-bottom 1px solid #dfdfdf
		list-style-type none
		background #efefef
		font-size 14px
		color #62626A
		font-family Lucida Grande, Arial, sans-serif
		&.active-menu
			background #249ED3
			color white
		&:hover
			cursor pointer
			color white
			background #4be
			.menu-icon
				-webkit-filter brightness(10%) 
		&:last-child
			border-none

		.menu-icon
			width 18px
			height 18px
			float left
			opacity: 0.5
			margin-top 10px
			margin-left 4px
			margin-right 4px
			
			&.favourites-image
				background: url('/../images/menu/favorites.png') no-repeat;
				background-size: 18px
			&.show-playlists 
				background: url('/../images/menu/playlists.png') no-repeat;
				background-size: 18px
			&.show-groupes
				background: url('/../images/menu/radios.png') no-repeat;
				background-size: 18px
			&.show-by-genres 
				background: url('/../images/menu/genres.png') no-repeat; 
				background-size: 18px
			&.show-by-artists
				background: url('/../images/menu/artists.png') no-repeat;
				background-size: 18px
			&.show-by-albums
				background: url('/../images/menu/explore.png') no-repeat;
				background-size: 18px
			&.show-by-charts
				background: url('/../images/menu/charts.png') no-repeat;
				background-size: 18px
		.name
			padding-top 10px
		

	#playlist-menu-container
		margin-left 0px
		.add-playlist-button
			background #9E9E9E
			padding 5px 0 5px 0px
			cursor pointer
			font-size 12px
			color white
			text-align center
	.playlist-icon-menu
		position absolute
		width 13px
		height 13px
		background url('/../images/menu/playlist.png') no-repeat
		background-size 13px
		top 5px
		margin 3px 5px
	.menu-playlist-container-child
		position absolute
		top 221px
		bottom 0px
		overflow-y auto
		width 100%
		&::-webkit-scrollbar
			-webkit-appearance: none
			width 12px

		&::-webkit-scrollbar-thumb
			border-radius 12px
			border 4px solid rgba(255,255,255,0)
			background-clip content-box
			_background-color #bfbfbf
			background-color #A0A0A0
		
		&::-webkit-scrollbar-thumb:hover
			background-color #37a
			cursor pointer
		&::-webkit-scrollbar-track
			border-width 0
		
		&::-webkit-scrollbar-track:hover
			background-color #eee
		.menu-playlist-item
			height 30px
			line-height 30px
			vertical-align middle
			position relative
			display block
			font-size 13px
			width 100%
			&:hover
				background #E1ECF0
				.delete-menu-playlist
					opacity 0.5
			.playlist-name-menu
				color black
				padding-right 35px
				padding-left 25px
				cursor pointer
				border-bottom 1px solid #eee
				overflow hidden
				height 30px
				line-height 30px
				&:last-child
					border none	
			.delete-menu-playlist
				width 30px
				height 30px
				background url('../images/notifications/bin.png') no-repeat 50%
				background-size 16px
				position absolute
				right 0
				top 0
				opacity 0
				&:hover
					cursor pointer
					opacity 1
