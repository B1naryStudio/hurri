.radio-wrapper
	width  80%
	min-width 600px
	margin 1%
	height 300px
	display block
	background rgba(244,244,244,1) 
	position relative
	padding 10px
	margin 1% auto
	border 1px solid #dedede
	
	.left-side
		display block
		width 50%
		float left
		height 100%
	.nameRadio
		width 100%
		height 30px
		font-size 25px
		color #777
		padding-bottom 5px
	.first-track-in-list
		font-size 13px
		font-weight bold
		color #555
	.tracksnames
		font-size 13px
		color grey
		max-width 250px
		height 15px
		text-overflow ellipsis
		overflow hidden
		display inline
		&:hover
			color DodgerBlue
			cursor pointer
	.recommend-radio-wrapper
		position absolute
		bottom 15px
		left 15px
		width 300px
		.master-avatar
			display block
			width 50px
			margin auto
			border-radius 25px
		.masterName
			height 20px
			color #bbb
			display block
		.recommend-channel-header
			border-bottom 1px solid #ccc
			color #ccc

	
	.tracks-side
		height 90%
		width 50%
		float left
		.listeners-list-wrap
			height 120px
			overflow hidden	
			img
				width 50px
				height 50px
				margin 5px
				border-radius 5px
		.playicon
			width 100px
			height 40px
			background #999
			text-align center
			padding-top 20px
			margin 50px auto
			color white
			font-weight bold
			&:hover 
				background #aaa
				cursor pointer
		.ask-for-rights
			display none
			display none
			width 100px
			height 40px
			background #999
			text-align center
			padding-top 20px
			margin 50px auto
			color white
			font-weight bold
			&:hover 
				background #aaa
				cursor pointer

		.stop-listening
			display none
			width 100px
			height 40px
			background #999
			text-align center
			padding-top 20px
			margin 50px auto
			color white
			font-weight bold
			&:hover 
				background #aaa
				cursor pointer

.radio-main-header
	height 20px
	width 100%
	text-align center
	color white
	background #9e9e9e
	padding-top 10px
#radio-bars-container
	overflow-y auto
	position absolute
	top 40px
	bottom 0px
	width 100%
.stop-broadcasting
	width 60px
	height 20px
	text-align center
	color #ddd
	border-radius 2px
	background #333
	position absolute
	top 10px
	left 5px
	&:hover
		cursor pointer
		color SkyBlue

.create-new-radio
	width 150px
	position absolute
	top 5px
	background #9e9e9e
	color white
	font-weight bold
	border-bottom none
	left 5px
	&:hover
		cursor pointer
		color #6ff