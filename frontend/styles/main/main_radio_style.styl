.radio-wrapper
	width  300px
	padding 1%
	margin 1%
	height 200px
	display block
	float left 
	background rgba(204,204,204,1) 
	position relative

	.nameRadio
		width 100%
		height 20px
		background linear-gradient(to top, rgba(238,238,238,1) 0%,rgba(204,204,204,1) 100%)
		text-align center
	
	.left-side
		display block
		width 50%
		background white
		opacity 0.8
		float left
		height 90%
		
	.master-avatar
		display block
		width 50px
		margin auto
	.totalTracksRadio
	.listeners
	.masterName
		height 20px
		display block
		margin auto
		text-align center
	.tracks-side
		height 90%
		width 50%
		background white
		opacity 0.5
		float left
	.playicon
		icon_size = 128px
		background url(../images/main/play.gif)
		background-size icon_size
		opacity 0.3
		width icon_size
		height icon_size
		position absolute
		top 50%
		left 50%
		margin-top -(icon_size/2)
		margin-left -(icon_size/2)
		z-index 10
		&:hover
			background url(../images/main/play.gif)
			background-size 128px
			opacity 0.8
			cursor pointer
		&:active 	
			background url(../images/main/play.gif)
			background-size 128px
			opacity 0.5

.radio-main-header
	height 30px
	width 100%
	text-align center
	color white
	background #333
	padding-top 10px
	border-top 1px solid #aaa
.create-new-radio
	width 100%
	border-bottom 1px solid #ccc
	background #ddd
	&:hover 
		background #ccc
	.create-new-radio-img
		margin auto
		width 30px
		height 30px
		background url(/../../images/menu/add.png) no-repeat
		background-size 25px
		background-position center
		&:hover
			opacity 0.6
		&:active 
			opacity 0.8

		