#main
	&.toggled-main
		width 85%
#main-container
	background white
	float left
	width 60%
	overflow hidden
	overflow-y auto
	position absolute
	top 120px
	bottom 30px
	margin-left 15%
	&.toggled-main
		width 85%
.main-song-item
	width 90%
	height 40px
	margin auto
	margin-bottom 2px
	position relative
	background #fff
	border-radius 5px
	box-shadow 0 2px 3px rgba(0, 0, 0, 0.4)
	&.activesong
		background lightblue
	.main-share-song
		width 16px
		height 16px
		background url(../images/main/share.png)
		background-size 16px
		position absolute
		z-index 15
		right 2px
		top 2px
		opacity 0
	.main-song-cover
		width 30px
		margin 5px
		height 30px
		float left
		background url(/../images/default/cover.png) no-repeat
		background-size 30px
		&:hover 
			background url(/../images/songlist/play_mini.jpg) no-repeat
			background-size 30px

	.main-song-info
		float left
		height 30px
		overflow hidden
		display inline
		width 80%

		.main-song-name
			padding-top 10px
			height 20px
			text-overflow ellipsis
		.main-song-album
			display block
			height 20px
			font-size 12px
	
	.main-queue-add
		width 16px
		height 16px
		background url(../images/main/nothing.png)
		background-size 16px
		position absolute
		z-index 15
		right 20px
		top 2px
		opacity 0
		&:hover
			opacity 1 !important
	.main-like-song
		width 16px
		height 16px
		background url(../images/main/like.png)
		background-size 16px
		position absolute
		z-index 15
		right 38px
		top 2px
		opacity 0
		&:hover
			opacity 1 !important
		&.true
			opacity 1 !important
		
	&:hover
		background #eee
		.main-share-song
		.main-like-song
			opacity 0.5
		.main-queue-add
			opacity 0.5

			
	.queueposmain
		position absolute	
		right 60px
		
.global-zeroclipboard-container:hover
	background url(../images/main/share.png)
	background-size 16px
	opacity 0.8

#visualisation-container
	overflow: hidden
	position: relative

#visualisation-fullscreen
	background: #333 url(../images/player/visualisation.png)
	width: 20px
	height: 20px
	opacity: 0.1
	cursor: pointer
	position: absolute
	bottom: 0px
	right: 0px
	z-index: 101
	&:hover
		opacity: 1

#visualisation-controls
	position: absolute
	left: 50%
	margin-left: -20px
	height: 30px
	width: 85px
	background: #333
	opacity: 0.1
	z-index: 101
	&:hover
		opacity: 1

.vc-option
	display: inline-block
	height: 20px
	width: 20px
	box-sizing: border-box
	color: white
	cursor: pointer
	margin-right: 7px
	background-size: 100% 100% 
	margin-top: 5px

.vc-option:last-child
	margin: 0px

.vc-option:first-child
	margin-left: 5px


#vc-frequency-visualisation
	background: url(../images/player/visualisation.png)

#vc-waveform-visualisation
	background: url(../images/player/visualisation.png)

#vc-particles-visualisation
	background: url(../images/player/visualisation.png)

#frequency-visualisation-container
	padding-bottom: 80px
	padding-left: 8px
	overflow: hidden

#frequency-visualisation-canvas
	width: 100%
	@css{
  -webkit-box-reflect: below 5px -webkit-linear-gradient(top, transparent, transparent 50%, rgba(255,255,255,0.2))
	}

#particles-visualisation-container
	padding-left: 8px
	overflow: hidden
	background: black

#particles-visualisation-canvas
	width: 100%

.visualisation-fullscreen #particles-visualisation-container canvas
	height: 100%

.visualisation-fullscreen
	overflow: initial

	#visualisation-controls
	#visualisation-fullscreen
		position: fixed
		
	.visualisation-container
		background: white
		z-index: 100
		position: fixed
		left: 0px
		top: 120px
		width: 100%
		height: 100%
