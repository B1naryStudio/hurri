.playlist-bar-wrapper
	width 512px
	margin-top 35px
	padding 20px
	float left


.playlist-bar
	width 90%
	height 250px
	position relative
	float left
	margin 5px 20px
	border 1px solid #9e9e9e
	background #efefef

	.playlist-date
		font-size 15px
		width 35px
		height 15px
		text-overflow hidden
		overflow hidden
		color #eee
		margin auto

	.playlist-left
		width 45%
		float left
		height 250px
		padding 1px
		margin-right 10px
		text-align center
		position relative
		.play-without-open
			display none
			width 30px
			height 20px
			background linear-gradient(to top, #eee 0%, #ddd 100%)
			border-radius 2px
			border 1px solid lightgray

		.playlist-name
			top 5px
			left 35px
			position absolute
			font-size 28px
			height 30px
			text-overflow hidden
			overflow hidden
			color #333333
			margin-bottom 10px
		.playlist-total
			font-size 15px
			position absolute
			bottom 10px
			left 20px
			color #333333

		.playlist-private
			position absolute
			width 32px
			height 32px
			right 5px
			bottom 32px
			background: url('/images/lock.png') no-repeat
			background-size 32px
			opacity 0.5
			z-index 5
			&.private
				opacity 1
		.playlist-play
			width 120px
			height 120px
			top 0px
			position absolute
			img
				width 150px
				height 150px
				position absolute
				top 45px
				left 15px	
				&:hover
					opacity 0.3


	.playlist-right
		padding 5px
		float left
		width 45%
		background #efefef
		height 242px
		min-height 240px
		text-align center
		overflow hidden
		box-sizing border-box
		.songs-list
			margin-top 40px
			text-align left
			list-style-type decimal-leading-zero
			list-style-position inside
			height 240px
			overflow hidden
		.songname-playlist
			border-bottom 1px solid #9e9e9e
			border-top 1px solid #9e9e9e
			line-height 35px
			color #333333
			text-overflow ellipsis
			overflow hidden
			font-size 18px
			height 35px
			width 90%
			white-space nowrap



