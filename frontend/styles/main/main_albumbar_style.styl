#main-bar-header
	width 100%
	height 40px
	background #333
	margin 0px auto
	border-top 1px solid #999

	#genres-select
		display inline-block
		height 30px
		margin-right 20px
		margin-left 25%
		option
			padding 5px
	#album-select
	#artist-select
	#track-select
		padding 10px	
		display inline-block
		height 20px
		text-align center
		border-left 1px solid grey
		color white
		width 80px
		&:last-child
			border-right 1px solid grey
		&:hover
			background #39d

#main-child-container
	width 100%
	position absolute
	height 100%
	top 40px
.album-bar 
	width 180px
	height 280px
	background-size 180px
	border 1px solid #dedede
	float left
	margin 10px
	position relative
	overflow hidden
	font-family Lucida Grande,Arial,sans-serif;
	font-size 15px
	padding 5px
	color #555
	boder-radius 5px
	img.albumCover
		width 180px
		border-bottom 1px solid #ccc
	.nameAlbum
		position relative
		margin-top 15px
		width 100%
		height 16px
		background white
		opacity 1
		color #333
		overflow hidden
		text-overflow hidden
		font-weight medium


	.artistAlbum
		width 100%
		background white
		overflow hidden
		opacity 1
		font-size 12px
		margin-top 1px
		height 13px
		color #999

	.add-to-sidebar-list-album
		width 100px
		height 23px
		padding-top 7px
		margin 15px auto 0
		text-align center
		border 1px solid lightgrey
		border-radius 3px
		background #eee
		font-size 12px
		font-weight bold
		&:hover
			background #ffe
			cursor pointer
			
		
