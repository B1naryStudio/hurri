.friend
	padding 2%
	width 90%
	height 50px
	display block
	margin 5px
	position relative
	border-radius 2px
	background #fefefe
	box-shadow 0 0 5px 0 rgba(50,50,50,0.5)
	.send-message
		img
			position absolute
			top 33%
			right 2px
			width 32px
			height 32px		
	img
		width 50px
		height 50px
		float left
	p 
		float left
	div 
		img
			position absolute
			top 2px
			right 2px
			width 12px
			height 12px

#friends-navi
	background Snow
	opacity 1
	height 40px
	border-top 1px solid #999
	.friends-navi
		height 40px
		line-height 40px
		vertical-align middle
		width 50%
		float left
		color white
		background #333
		text-align center
		cursor pointer
		border-left 1px solid #fff
