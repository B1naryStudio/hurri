#song-comment-container
	overflow-y auto
	position absolute
	top 0px
	bottom 0px
	width 100%

#song-info-content
	#song-info-text
		width 90%
		margin 3% auto
	#song-info-image 
		width 200px
		height 200px
		margin 3% auto
		img
			width 190px
			
#comment-buttons-wrapper
	width 100%
	margin auto
	height 30px
	#show-song
		width 50%
		height 30px
		background #eee
		float left
		border-right 1px solid lightgrey
		text-align center
		box-sizing border-box
	#show-comments
		width 50%
		height 30px
		background #eee
		float left
		text-align center
#add-comment
	padding 5px
	cursor pointer
	background-color #efefef
	border 1px solid #9e9e9e
	border-radius 5px
#comment-layout-content
	#song-text
		width 90%
		margin 2% auto
	#new-comment
		margin 3%
		width 80%
		float left
	#add-comment
		margin-top 2.3%
		float left
.comment
	background #f3f4f8
	width 96%
	float left
	margin 1%
	padding 1%
	border-radius 5px
	border 1px solid #9e9e9e
	.comment-info
		float left
		width 15%
		img
			margin 0 auto
	.comment-text
		width 83%
		margin 1%
		float left
		